<h1>New Recipe</h1>
<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br/>

  <%= f.fields_for :ingredients do |ingr| %>
    <%= ingr.label :name, "Ingredient Name" %>
    <%= ingr.text_field :name %>
    <%= ingr.label :quantity %>
    <%= ingr.text_field :quantity %><br/>
  <% end %>
  <%= f.submit %>
<% end %>
